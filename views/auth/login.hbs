<section class="container-fluid banner activities"></section>
<section class="container-fluid results">
  <div class="container">
    <div class="row">
      <div class="col-12 col-sm-10">
        <h1 class="title">Login here</h1>
        <div class="row justify-content-center">
          <div class="col-12">
            {{#if message}}
            <div class="alert alert-primary" role="alert">
              {{message}}
            </div>
            {{/if}}
            {{#if error.validation}}
            <div class="alert alert-danger" role="alert">
              {{error.validation.message}}
            </div>
            {{/if}}
            <form action="/login" method="POST">
              <div class="form-group">
                <label for="email">Email</label>
                <input name="email" type="text" class="form-control {{#if error.email }}is-invalid{{/if}}" id="email"
                  placeholder="Enter email" value="{{ user.email }}">
                {{#if error.email}}
                <div class="invalid-feedback">
                  {{error.email.message}}
                </div>
                {{/if}}
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input name="password" type="password" class="form-control {{#if error.password }}is-invalid{{/if}}"
                  id="password" placeholder="Enter password" value="{{ user.password }}">
                {{#if error.password}}
                <div class="invalid-feedback">
                  {{error.password.message}}
                </div>
                {{/if}}
              </div>
              <div class="d-flex mb-3">
                <button type="submit" class="btn mr-3 form-btn">Login</button>
              </div>
              <div class="d-flex mb-3 social-btn">
                <a href="/auth/google" class="btn btn-secondary"><i class="fa fa-google"></i> Login with
                  Google</a>
              </div>
              <div class="d-flex mb-3 social-btn">
                <a href="/auth/facebook" class="btn btn-secondary"><i class="fa fa-facebook"></i> Login with
                  Facebook</a>
              </div>
              <p>Don't have an account? <a href="/register">register</a></p>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>