<section class="container-fluid results">
  <div class="big-avatar" style="background: url({{user.avatar}}) no-repeat center center / cover;"></div>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-6">
        <h1>{{user.name}}'s profile</h1>
        {{#if message}}
        <h2>{{message}}</h2>
        {{/if}}
        <form action="/user-profile/{{user._id}}/edit" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <label for="name">Name</label>
            <input name="name" type="text" class="form-control {{#if error.name }}is-invalid{{/if}}" id="name"
              placeholder="Enter name" value="{{ user.name }}">
            {{#if error.name}}
            <div class="invalid-feedback">
              {{error.name.message}}
            </div>
            {{/if}}
          </div>
          <fieldset disabled>
            <div class="form-group">
              <label for="username">Username</label>
              <input name="username" type="text" class="form-control {{#if error.username }}is-invalid{{/if}}"
                id="username" placeholder="Enter username" value="{{ user.username }}">
              {{#if error.username}}
              <div class="invalid-feedback">
                {{error.username.message}}
              </div>
              {{/if}}
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input name="email" type="email" class="form-control {{#if error.email }}is-invalid{{/if}}" id="email"
                placeholder="Enter email" value="{{ user.email }}">
              {{#if error.email}}
              <div class="invalid-feedback">
                {{error.email.message}}
              </div>
              {{/if}}
            </div>
          </fieldset>
          <div class="form-group">
            <label>Avatar</label>
            <div class="custom-file">
              <input type="file" class="custom-file-input  {{#if error.avatar }}is-invalid{{/if}}" id="avatar"
                name="avatar" value="{{ user.avatar }}">
              <label class="custom-file-label" for="avatar">Choose avatar</label>
              {{#if error.avatar}}
              <div class="invalid-feedback">
                {{error.avatar.message}}
              </div>
              {{/if}}
            </div>
          </div>
          <div class="form-group">
            <button type="button" class="delete-spot" data-toggle="modal" data-target="#changePassword">
              Change password
            </button>
          </div>

          <div class="form-group">
            <label for="bio">Bio</label>
            <textarea name="bio" type="text" class="form-control {{#if error.bio }}is-invalid{{/if}} textarea" id="bio"
              placeholder="Enter bio" value="{{ user.bio }}" rows="4"></textarea>
            {{#if error.bio}}
            <div class="invalid-feedback">
              {{error.bio.message}}
            </div>
            {{/if}}
          </div>
          <div class="row">
            <div class="col-12 col-sm-6">
              <button type="submit" class="form-btn w-100">
                Update profile
              </button>
            </div>
            <div class="col-12 col-sm-6">
              <button type="button" class="delete-spot" data-toggle="modal" data-target="#delete">
                Delete profile
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>


<!-- Modal -->
<div class="modal fade" id="delete" tabindex="-1" aria-labelledby="deleteLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="title" id="deleteLabel">Delete profile</h1>
      </div>
      <div class="modal-body">
        We are sorry you'll leave mappet. Are you sure?
      </div>
      <div class="modal-footer">
        <a type="button" class="close-btn" data-dismiss="modal">Close</button>
          <a href="/user-profile/{{user._id}}/delete" class="btn">Delete profile</a>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="changePassword" tabindex="-1" aria-labelledby="deleteLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="title" id="deleteLabel">Change password</h1>
      </div>
      <div class="modal-body">
        <form action="/change-password/{{user._id}}" method="POST">
          <div class="form-group">
            <label for="password">Current password</label>
            <input name="password" type="password" class="form-control {{#if error.password }}is-invalid{{/if}}"
              id="password" placeholder="Enter current password">
            {{#if error.password}}
            <div class="invalid-feedback">
              {{error.password.message}}
            </div>
            {{/if}}
          </div>
          <div class="form-group">
            <label for="newpassword">New password</label>
            <input name="newpassword" type="password" class="form-control {{#if error.password }}is-invalid{{/if}}"
              id="newpassword" placeholder="Enter new password">
            {{#if error.password}}
            <div class="invalid-feedback">
              {{error.password.message}}
            </div>
            {{/if}}
          </div>
          <div class="row">
            <div class="col-12">
              <button type="submit" class="form-btn w-100">
                Change password
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>