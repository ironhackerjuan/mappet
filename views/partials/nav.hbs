{{#unless admin}}
<nav class="navbar navbar-expand-lg">
  <a class="navbar-brand" href="/">
    <img src="/images/logo.svg" alt="mappet logo" class="logo" />
    <img src="/images/res-logo.svg" alt="mappet logo" class="res-logo" />
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggle"
    aria-controls="navbarToggle" aria-expanded="false" aria-label="Toggle navigation">
    <svg aria-hidden="true" focusable="false" data-prefix="far" data-icon="bars" role="img"
      xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" class="svg-inline--fa fa-bars fa-w-14 fa-2x">
      <path fill="currentColor"
        d="M436 124H12c-6.627 0-12-5.373-12-12V80c0-6.627 5.373-12 12-12h424c6.627 0 12 5.373 12 12v32c0 6.627-5.373 12-12 12zm0 160H12c-6.627 0-12-5.373-12-12v-32c0-6.627 5.373-12 12-12h424c6.627 0 12 5.373 12 12v32c0 6.627-5.373 12-12 12zm0 160H12c-6.627 0-12-5.373-12-12v-32c0-6.627 5.373-12 12-12h424c6.627 0 12 5.373 12 12v32c0 6.627-5.373 12-12 12z"
        class=""></path>
    </svg>
  </button>

  <div class="collapse navbar-collapse" id="navbarToggle">
    <ul class="navbar-nav col-12 col-sm-6 p-0">
      <li class="nav-item">
        <a class="nav-link {{#ifvalue category equals="restaurants"}}active{{/ifvalue}}"
          href="/restaurants">Restaurants</a>
      </li>
      <li class="nav-item">
        <a class="nav-link {{#ifvalue category equals="services"}}active{{/ifvalue}}" href="/services">Services</a>
      </li>
      <li class="nav-item">
        <a class="nav-link {{#ifvalue category equals="activities"}}active{{/ifvalue}}"
          href="/activities">Activities</a>
      </li>
      <li class="nav-item">
        <a class="nav-link {{#ifvalue category equals="events"}}active{{/ifvalue}}" href="/events">Events</a>
      </li>
      <li class="nav-item login">
        <ul {{#if user}}class="logged" {{/if}}>
          {{#if user}}
          <li class="user-info">
            <div class="nav-avatar" style="background: #ea7676 url({{user.avatar}}) no-repeat center center / cover;">
            </div>
            <p>Hi <strong><a href="/user/{{user._id}}" class="user-link">@{{user.username}}</a></strong></p>
            {{else}}
          <li class="nav-item user-register">
            <a href="/register" class="nav-link {{#ifvalue category equals="register"}}active{{/ifvalue}}">Register</a>
          </li>
          <li class="nav-item user-login">
            <a href="/login" type="button" class="nav-link">Login</a>
          </li>
          {{/if}}
        </ul>
      </li>

      {{#if user}}
      <li class="nav-item dropdown more">
        <a class="nav-link plus" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true"
          aria-expanded="false">
          +
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="/spot/{{user._id}}/new">Mappet a spot</a>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="/pets/{{user._id}}">Add a pet</a>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="/user-profile/{{user._id}}">Edit profile</a>
          <div class="dropdown-divider"></div>
          <a href="/logout" class="dropdown-item" href="#">Logout</a>
        </div>
      </li>
      {{/if}}
    </ul>
  </div>
</nav>
{{/unless}}