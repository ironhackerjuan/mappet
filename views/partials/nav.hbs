{{#unless admin}}
<nav class="navbar navbar-expand-lg">
  <a class="navbar-brand" href="/">
    <img src="./images/logo.svg" alt="mappet logo" class="logo" />
    <img src="./images/res-logo.svg" alt="mappet logo" class="res-logo" />
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggle"
    aria-controls="navbarToggle" aria-expanded="false" aria-label="Toggle navigation">
    <svg aria-hidden="true" focusable="false" data-prefix="fal" data-icon="bars" role="img"
      xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" class="svg-inline--fa fa-bars fa-w-14 fa-2x">
      <path fill="currentColor"
        d="M442 114H6a6 6 0 0 1-6-6V84a6 6 0 0 1 6-6h436a6 6 0 0 1 6 6v24a6 6 0 0 1-6 6zm0 160H6a6 6 0 0 1-6-6v-24a6 6 0 0 1 6-6h436a6 6 0 0 1 6 6v24a6 6 0 0 1-6 6zm0 160H6a6 6 0 0 1-6-6v-24a6 6 0 0 1 6-6h436a6 6 0 0 1 6 6v24a6 6 0 0 1-6 6z"
        class=""></path>
    </svg>
  </button>

  <div class="collapse navbar-collapse" id="navbarToggle">
    <ul class="navbar-nav col-12 col-sm-6 p-0">
      <li class="nav-item">
        <a class="nav-link {{#ifvalue category equals="restaurants"}}active{{/ifvalue}}"
          href="/restaurants">Restaurants</a>
      </li>
      <li class="nav-item">
        <a class="nav-link {{#ifvalue category equals="services"}}active{{/ifvalue}}" href="/services">Services</a>
      </li>
      <li class="nav-item">
        <a class="nav-link {{#ifvalue category equals="activities"}}active{{/ifvalue}}"
          href="/activities">Activities</a>
      </li>
      <li class="nav-item">
        <a class="nav-link {{#ifvalue category equals="events"}}active{{/ifvalue}}" href="/events">Events</a>
      </li>
      <li class="nav-item login">
        <ul>
          {{#if user}}
          <li class="user-info">
            <a href="/user-profile/{{user._id}}" class="nav-avatar"
              style="background: #65c9ff url({{user.avatar}}) no-repeat center center / cover; width:30px; height:30px; display:block;">
              <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-plus-circle-fill" fill="currentColor"
                xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd"
                  d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4a.5.5 0 0 0-1 0v3.5H4a.5.5 0 0 0 0 1h3.5V12a.5.5 0 0 0 1 0V8.5H12a.5.5 0 0 0 0-1H8.5V4z" />
              </svg>
            </a>
            <p>Hi <strong>@{{user.username}}</strong></p>
          </li>
          <li class="nav-item logout">
            <form id="logout-form" action="/logout" method="POST">
              <button class="nav-link">Logout</button>
            </form>
          </li>
          {{else}}
          <li class="nav-item user-register">
            <a href="/register" class="nav-link {{#ifvalue category equals="register"}}active{{/ifvalue}}">Register</a>
          </li>
          <li class="nav-item user-login">
            <a href="/login" type="button" class="nav-link">Login</a>
          </li>
          {{/if}}
        </ul>
      </li>

      {{#if user}}
      <li class="nav-item dropdown more">
        <a class="nav-link" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true"
          aria-expanded="false">
          +
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="#">Mappet a spot</a>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="#">Edit profile</a>
          <a class="dropdown-item" href="#">Logout</a>
        </div>
      </li>
      {{/if}}
    </ul>
  </div>
</nav>
{{/unless}}